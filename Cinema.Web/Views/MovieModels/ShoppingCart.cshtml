@model Cinema.Web.Models.ShoppingCart

@{
    ViewBag.Title = "Shopping Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




    @if (Model.TicketsInShoppingCart.Count > 0)
    {
        <div class="text-center">
            <h1>Tickets in Cart</h1>
        </div>

        <div class="row" style="display: flex; justify-content: space-evenly;margin-bottom:20px;margin-top:30px;">

            <div class="col-md-3 m-4 text-center" style="font-weight:500; font-size: 25px;width: 18rem;">
                <label>Movie:</label>
            </div>

            <div class="col-md-3 m-4 text-center" style="font-weight:500; font-size: 25px;width: 18rem;">
                <label>Number of Tickets:</label>
            </div>

            <div class="col-md-3 m-4 text-center" style="font-weight:500; font-size: 25px;width: 18rem;">
                <label>Price:</label>
            </div>

            <div class="col-md-3 m-4 text-center" style="font-weight:500; font-size: 25px;width: 18rem;">
                <label>Total:</label>
            </div>
        </div>

        foreach (var item in Model.TicketsInShoppingCart)
        {

            var total = item.Price * item.NumberOfTickets;

            <div class="row" style="display: flex; justify-content: space-evenly;margin-bottom:50px;">
                <div class="col-md-3 m-4 text-center" style="display:flex; justify-content:center; flex-direction:column;width: 18rem;height:35rem;">
                    <img class="card-img-top" src="@item.Movie.Image" />
                    <h3>@item.Movie.Name</h3>
                    <h4>Date: @item.DateOfReservation.ToShortDateString()</h4>
                </div>

                <div class="col-md-3 m-4 text-center" style="display:flex; justify-content:center; align-items:center; width: 18rem;height:35rem;">
                    @Html.ActionLink("-", "DecrementTicket", "MovieModels", new { @ticketId = @item.Id }, new { @class = "btn btn-danger m-2" })
                    <h6 style="font-weight: 500; font-size: 25px;margin:0 10px;">@item.NumberOfTickets</h6>
                    @Html.ActionLink("+", "IncrementTicket", "MovieModels", new { @ticketId = @item.Id }, new { @class = "btn btn-success m-2" })
                </div>

                <div class="col-md-3 m-4 text-center" style="font-size: 25px; display:flex; justify-content:center; flex-direction:column;width: 18rem;height:35rem;">

                    <h6 style="font-weight: 500; font-size: 25px;">$@item.Price</h6>
                </div>

                <div class="col-md-3 m-4 text-center" style="font-size: 25px; display:flex; justify-content:space-evenly; align-items:center; width: 18rem;height:35rem;">

                    <h6 style="font-weight: 500; font-size: 25px;">$@total</h6>
                    <p style="padding:0;margin:0;">
                        @Html.ActionLink(" ", "RemoveTicket", "MovieModels", new { ticketId = item.Id }, new { @class = "far fa-trash-alt text-center", @style = "color:#d9534f;" })
                    </p>

                </div>

            </div>
        }

    }
    else
    {
        <div class="text-center" style="margin-top:50px;">
            <h1>No tickets in cart!</h1>
            @Html.ActionLink("Browse Movies", "Index", "MovieModels", new { @class = "btn btn-success" })
        </div>
    }



